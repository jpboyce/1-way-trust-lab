{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {

    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        "DHCPOptions": {
            "Type": "AWS::EC2::DHCPOptions",
            "Properties": {
                "DomainName": "ap-southeast-2.compute.internal",
                "DomainNameServers": ["AmazonProvidedDNS"]
            }
        },

        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsHostnames": "True",
                "EnableDnsSupport": "True"
            }
        },


        "subnetDMZ": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "-",
                "VpcId": {
                    "Ref": "VPC"

                },
                "CidrBlock": "10.0.10.0/24"
            }
        },

        "subnetProd": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "-",
                "VpcId": {
                    "Ref": "VPC"

                },
                "CidrBlock": "10.0.20.0/24"
            }
        },

        "subnetAccess": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "-",
                "VpcId": {
                    "Ref": "VPC"

                },
                "CidrBlock": "10.0.30.0/24"
            }
        },


        "igw": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {}
        },
        "AttachGateway": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "InternetGatewayId": {
                    "Ref": "igw"
                }
            }
        },
        "DefaultNetworkACL": {
            "Type": "AWS::EC2::NetworkAcl",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },


        "ACLAllowPingFromRemoteCIDR": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "DefaultNetworkACL"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "Allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "Icmp": {
                    "Code": "-1",
                    "Type": "-1"
                }
            }
        },

        "ACLAllowRDPFromRemoteCIDR": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "DefaultNetworkACL"
                },
                "RuleNumber": "3389",
                "Protocol": "6",
                "RuleAction": "Allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "3389",
                    "To": "3389"
                }
            }
        },

        "AssociateACLtoAccessSubnet": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "subnetAccess"
                },
                "NetworkAclId": {
                    "Ref": "DefaultNetworkACL"
                }
            }
        },


    },
    "Outputs": {
        "VpcId": {
            "Description": "VPC",
            "Value": {
                "Ref": "VPC"
            }
        }

    }
}