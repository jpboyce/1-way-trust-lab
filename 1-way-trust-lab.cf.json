{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "",
  "Metadata": {},
  "Parameters": {},
  "Mappings": {
    "AWSRegion2AMI": {
        "ap-southeast-2": {
            "Windows_Server-2012-RTM-English-64Bit-Base": "ami-8f17f5ed",
            "Windows_Server-2008-R2_SP1-English-64Bit-Base": "ami-9f0ceefd",
            "RHEL-7.3": "ami-9a3322f9"
        }
    }
  },
  "Conditions": {},
  "Resources": {
    "DHCPOptions": {
      "Type": "AWS::EC2::DHCPOptions",
      "Properties": {
        "DomainName": "ap-southeast-2.compute.internal",
        "DomainNameServers": ["AmazonProvidedDNS"]
      }
    },

    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsHostnames": "True",
        "EnableDnsSupport": "True"
      }
    },

    "subnetDMZ": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "0",
            {
              "Fn::GetAZs": {
                "Ref": "AWS::Region"
              }
            }
          ]
        },
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": "10.0.10.0/24"
      }
    },

    "subnetProd": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "1",
            {
              "Fn::GetAZs": {
                "Ref": "AWS::Region"
              }
            }
          ]
        },
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": "10.0.20.0/24"
      }
    },

    "subnetAccess": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "2",
            {
              "Fn::GetAZs": {
                "Ref": "AWS::Region"
              }
            }
          ]
        },
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": "10.0.30.0/24"
      }
    },

    "igw": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {}
    },
    "AttachGateway": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "InternetGatewayId": {
          "Ref": "igw"
        }
      }
    },
    "DefaultNetworkACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },

    "ACLAllowPingFromRemoteCIDR": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "DefaultNetworkACL"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "Allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0",
        "Icmp": {
          "Code": "-1",
          "Type": "-1"
        }
      }
    },

    "ACLAllowRDPFromRemoteCIDR": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "DefaultNetworkACL"
        },
        "RuleNumber": "3389",
        "Protocol": "6",
        "RuleAction": "Allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "3389",
          "To": "3389"
        }
      }
    },

    "AssociateACLtoAccessSubnet": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "subnetAccess"
        },
        "NetworkAclId": {
          "Ref": "DefaultNetworkACL"
        }
      }
    },

    "AssociateDHCPOptionsToVPC": {
      "Type": "AWS::EC2::VPCDHCPOptionsAssociation",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "DhcpOptionsId": {
          "Ref": "DHCPOptions"
        }
      }
    },

    "routetableAccessSubnet": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": "VPC"
      }
    },
    "routeToInternet": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": { "Ref": "routetableAccessSubnet" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Ref": "igw" }
      }
    },
    "routeTableAssocToAccessSubnet": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "subnetAccess" },
        "RouteTableId": { "Ref": "routetableAccessSubnet" }
      }
    },

    "ProdDC": {
        "Type": "AWS::EC2::Instance",
        "Properties": {
          "KeyName": "-",
          "DisableApiTermination": "False",
          "ImageId": {
            "Fn::FindInMap": [
              "AWSRegion2AMI",
              {
                "Ref": "AWS::Region"
              },
              "Windows_Server-2008-R2_SP1-English-64Bit-Base"
            ]
          },
          "InstanceType": { "Ref": "DC" },
          "Monitoring": "false",
          "SecurityGroupIds": [],
          "PrivateIpAddress": { "Ref": "ProdDCIP" },
          "SubnetId": { "Ref": "subnetProd" }
        }
      },
  
      "DMZDC": {
        "Type": "AWS::EC2::Instance",
        "Properties": {
          "KeyName": "-",
          "DisableApiTermination": "False",
          "ImageId": {
            "Fn::FindInMap": [
              "AWSRegion2AMI",
              {
                "Ref": "AWS::Region"
              },
              "Windows_Server-2012-RTM-English-64Bit-Base"
            ]
          },
          "InstanceType": { "Ref": "DC" },
          "Monitoring": "false",
          "SecurityGroupIds": [],
          "PrivateIpAddress": { "Ref": "DMZDCIP" },
          "SubnetId": { "Ref": "subnetDMZ" }
        }
      },
  
      "DMZRHEL": {
        "Type": "AWS::EC2::Instance",
        "Properties": {
          "KeyName": "-",
          "DisableApiTermination": "False",
          "ImageId": {
            "Fn::FindInMap": [
              "AWSRegion2AMI",
              {
                "Ref": "AWS::Region"
              },
              "RHEL-7.3"
            ]
          },
          "InstanceType": { "Ref": "RHEL" },
          "Monitoring": "false",
          "SecurityGroupIds": [],
          "PrivateIpAddress": { "Ref": "DMZRHELIP" },
          "SubnetId": { "Ref": "subnetDMZ" }
        }
      },
  
      "AccessRDP": {
        "Type": "AWS::EC2::Instance",
        "Properties": {
          "KeyName": "-",
          "DisableApiTermination": "False",
          "ImageId": {
            "Fn::FindInMap": [
              "AWSRegion2AMI",
              {
                "Ref": "AWS::Region"
              },
              "Windows_Server-2012-RTM-English-64Bit-Base"
            ]
          },
          "InstanceType": { "Ref": "RDP" },
          "Monitoring": "false",
          "SecurityGroupIds": [],
          "PrivateIpAddress": { "Ref": "AccessRDPIP" },
          "SubnetId": { "Ref": "subnetAccess" }
        }
      }
  
        


  },
  "Outputs": {
    "VpcId": {
      "Description": "VPC",
      "Value": {
        "Ref": "VPC"
      }
    }
  }
}
